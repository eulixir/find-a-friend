generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Species {
  DOG
  CAT
  BIRD
  SNAKE
  FOX
}

model Pet {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  name       String?
  species    Species
  breed      String
  orgId      String   @map("org_id")
  createdAt  DateTime @default(now()) @map("created_at")
  customerId String?  @map("customer_id")

  @@map("pets")
}

model Org {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  email       String   @unique
  phoneNumber String   @map("phone_number")
  createdAt   DateTime @default(now()) @map("created_at")
  addressId   String   @map("address_id")

  @@map("orgs")
}

model Address {
  id           String @id @default(auto()) @map("_id") @db.ObjectId
  zipCode      String @map("zip_code")
  state        String
  city         String
  neighborhood String
  street       String
  orgId        String @map("org_id")
  customerId   String
}

model Customer {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String   @unique
  createdAt DateTime @default(now()) @map("created_at")

  @@map("customers")
}
